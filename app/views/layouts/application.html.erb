<!DOCTYPE html>
<html>
<head>
  <title>ApplicationTest</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <nav class="nav">
      <div class="nav-left">
        <%= link_to image_tag("top.png", alt: "Top", class: "logo"), pages_index_path %>
      </div>

      <div class="nav-right">
        <% if current_user.present? && guest? %>
          <%= link_to "相性診断ページ", new_answer_path %>
        <% end %>

        <% if current_user.try(:admin?) %>
          <%= link_to '管理者ログイン', rails_admin_path %>
        <% end %>

        <% if user_signed_in? %>
          <%= link_to "参加者一覧", profiles_path %>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          <%= link_to "マイページ", pages_show_path %>
          <%= link_to "メッセージ一覧", rooms_path %>
          <%= link_to "気になる一覧", favorites_path %>
        <% else %>
          <%= link_to "新規登録", new_user_registration_path %>
          <%= link_to "ログイン", new_user_session_path %>
          <%= link_to 'ゲストログイン(閲覧用）', users_guest_sign_in_path, method: :post, class: "btn" %>
          <%= link_to '管理者ログイン(閲覧用)', users_admin_guest_sign_in_path, method: :post, class: "btn" %>
        <% end %>
        </div>
      </nav>
    </header>

  <main>
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>
    </main>
    <footer class="footer">
      <div class="footer-content">
        <p>@uchi.com</p>
      </div>
    </footer>
  </body>
</html>
